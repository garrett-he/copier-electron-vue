{
    "name": "{{ project_name }}",
    "version": "{{ project_version }}",
    "description": "{{ project_description }}",
    "private":
    {{ project_private | lower }},
    "main": "./dist-electron/index.js",
    "scripts": {
        "build": "vite build",
        "dev": "vite --host",
        "test": "vitest --run"
    },
    "repository": {
        "type": "git",
        "url": "git+https://github.com/{{ vcs_github_path }}.git"
    },
    "keywords": [
        "{{ project_keywords.split(',')|join('",\n"') }}"
    ],
    "author": "{{ copyright_holder_name }} <{{ copyright_holder_email }}>",
    "license": "{{ copyright_license }}",
    "bugs": {
        "url": "https://github.com/{{ vcs_github_path }}/issues"
    },
    "homepage": "https://github.com/{{ vcs_github_path }}#readme",
    "dependencies": {
        "vue": "^3.4.21",
        "vue-router": "^4.3.0"
        {% if with_vuex %},
        "vuex": "^4.1.0"
        {% endif %}
    },
    "devDependencies": {
        "@vitejs/plugin-vue": "^5.0.4",
        "@vue/test-utils": "^2.4.5",
        "electron": "^30.0.1",
        "electron-builder": "^24.13.3",
        "jsdom": "^24.0.0",
        "typescript": "^5.4.4",
        "vite": "^5.2.8",
        "vite-plugin-electron": "^0.28.5",
        "vitest": "^1.5.0"
    }
}
